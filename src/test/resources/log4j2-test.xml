<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <!-- Define custom levels before using them for filtering below. -->
    <CustomLevels>
        <CustomLevel name="PASS" intLevel="350" />
        <CustomLevel name="FAIL" intLevel="150" />
        <CustomLevel name="SKIP" intLevel="250" />
    </CustomLevels>
    <Appenders>
        <Console name="ColoredConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%-5level] %logger{36} - %msg%n}{INFO=blue, PASS=green, FAIL=yellow}" disableAnsi="false"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ColoredConsole"/>
        </Root>
    </Loggers>
</Configuration>